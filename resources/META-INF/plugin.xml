<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.cmion.idea</id>
    <name>Zen Theme</name>
    <version>1.0.5</version>
    <category>Themes</category>
    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://www.x.com/cmiondotdev">Simeon Akpanudo</vendor>

    <idea-version since-build="242"/>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->

    <description><![CDATA[
        <!--suppress LongLine -->
        <h1>Zen Theme Experience for JetBrains IDEs</h1>
        <hr/>
        <p>Set of UI themes for Intellij IDEs:
        <ul>
        <li>Zen Dark</li>
        <li>Zen Sakura (Cherry Blossom)</li>
        </ul>
        <br>
        <div>These themes were designed to be easy on the eye, especially during long sessions.</div>
</p>
        ]]></description>

    <!-- Short summary of new features and bugfixes in the latest plugin version.
         Displayed on the Plugin Page and IDE Plugin Manager. Simple HTML elements can be included between <![CDATA[  ]]> tags. -->
    <change-notes><![CDATA[
    Initial release of the theme.
  ]]></change-notes>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <themeProvider id="Zen Dark" path="/theme/Zen_Dark.theme.json"/>
        <themeProvider id="Zen Sakura" path="/theme/Zen_Sakura.theme.json"/>
    </extensions>
</idea-plugin>